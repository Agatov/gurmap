%script#place-list-item-template{type: "text/template"}
  %td{width: 200}
    %a.place-name{href: '#', target: "_blank"}
      <%= name %>
  %td{width: 80}
    <%= average_check %> руб.
  %td{width: 50}
    <%= min_sale %>%
  


%script#place-balloon-template{type: "text/template"}
  .balloon
    .arrow
      %img{src: '/images/bubble-arrow.png'}
    .image
      %img{src: "<%= avatar_preview %>".html_safe}

      .name
        <%= name %>


