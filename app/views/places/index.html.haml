#h-shadow
#map

#results-full.hide
  %table
    %thead
      %tr
        %td{width: 200}
          %span.places-list-sort{by: :name}
            Название
        %td{width: 80}
          %span.places-list-sort{by: :average_check}
            Средний счёт
        %td{width: 50}
          %span.places-list-sort{by: :min_sale}
