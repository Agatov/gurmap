<legend>Войти</legend>

<div class="row">
	<div class="span9">
		<%= simple_form_for(resource, :as => resource_name, html: {class: 'form-horizontal'}, :url => session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Войти" %>
		  </div>
		<% end %>
	</div>
	<div class="span3">
		<%= render "account/auth/shared/links" %>
	</div>
</div>


